  <div class="card">
    <div class="card-header">
      <h1><%= @post.title %></h1>
      <div><%= @post.created_at.strftime("%H:%M %d/%m/%Y") %></div>
    </div>
    <br/>
    <div class="card-body">
      <%# if @post.image.attached? %>
<!--        <div class="row">-->
          <%#= wicked_pdf_image_tag 'psinka.jpg' %>
          <%#= image_tag wicked_pdf_asset_base64(@post.image) %>
<!--          <img src="<%#= (url_for(@post.image))%>">-->
<!--        </div>-->
      <%# end %>
      <p class="card-text"><%= @post.content %></p>
    </div>
  </div>
  <br/>
  <div class="container">
    <h5> <%= @post.comments.count %> Comment<% if @post.comments.count != 1 %>s<% end %></h5>
    <%@post.comments.each do |com| %>
      <div class="card">
        <div class="card-header text-end">
          <cite class="text-muted"><%= com.created_at.strftime("%k:%M %d/%m/%Y") %></cite>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p><%= com.content %></p>
            <footer class="blockquote-footer"><%= com.user %> </footer>
          </blockquote>
        </div>
      </div>
      <br/>
  <% end %>
  </div>
