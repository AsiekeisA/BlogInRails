<div class="card">
  <div class="card-header text-end">
    <cite class="text-muted"><%= comment.created_at.strftime("%k:%M %d/%m/%Y") %></cite>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= comment.content %></p>
      <footer class="blockquote-footer"><%= comment.user %> </footer>
      <% if user_signed_in? && current_user.id==1%>
      <%= link_to "Delete", [comment.post, comment], data: { turbo_method: :delete,
                  turbo_confirm: "Are you sure?" }, class:"btn btn-outline-danger" %>
      <% end %>
    </blockquote>
  </div>
</div>
<br/>
